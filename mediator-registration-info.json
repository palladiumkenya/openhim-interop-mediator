{
  "urn": "urn:mediator:openhim-interoperability-middleware",
  "version": "1.0.0",
  "name": "OpenHIM Interoperability Middleware",
  "description": "Provides a platform for participating systems to specify subscription messages",
  "defaultChannelConfig": [{
    "name": "FHIR Proxy",
    "urlPattern": "^/fhir.*$",
    "routes": [{
      "name": "OpenHIM Mediator EMR Interop Proxy Route",
      "primary": true,
      "host": "localhost",
      "port": "8300",
      "type": "http",
      "forwardAuthHeader": false
    }],
    "allow": ["fhir"],
    "type": "http"
  }],
  "endpoints": [
    {
      "name": "OpenHIM Interoperability Proxy Route",
      "host": "localhost",
      "port": "8300",
      "type": "http"
    }
  ],
  "configDefs": [
    {
      "param": "participating-systems",
      "displayName": "Participating Systems",
      "type": "string",
      "value": "UpstreamOne::http://197.248.44.228:5000/one/api::ADX,UpstreamTwo::http://197.248.44.228:5000/two/api::ADX"
    },
    {
      "param": "upstream-format",
      "displayName": "Supported Message Types",
      "description": "The format to use upstream, XML or JSON.",
      "type": "option",
      "values": ["XML", "JSON", "ADX", "FHIR", "XML,JSON,ADX,FHIR"]
    },
    {
      "param": "upstream-scheme",
      "displayName": "Supported Upstream Server Scheme",
      "type": "option",
      "values": ["http", "https", "http,https"]
    },
    {
      "param": "validation-enabled",
      "displayName": "Enable Message Validation",
      "description": "Enable Message Validation",
      "type": "bool"
    }
  ]
}